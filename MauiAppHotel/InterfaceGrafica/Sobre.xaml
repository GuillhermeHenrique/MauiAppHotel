<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.InterfaceGrafica.Sobre"
             Title="Sobre"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Black}">
             
    <VerticalStackLayout VerticalOptions="CenterAndExpand">

        <Label Text="Sobre:"
               FontSize="38"
               FontFamily="Merriweather"
               TextColor="{StaticResource Primary}"
               Padding="10"/>

        <Frame Margin="10">
            <VerticalStackLayout Spacing="10"
                                 Padding="10">

                <HorizontalStackLayout>
                    <Label Text="Ano de desenvolvimento:"
                           FontSize="19"
                           TextColor="{StaticResource Primary}"
                           FontFamily="Merriweather"/>

                    <Label Text="11/11/2024;"
                           FontSize="18"
                           TextColor="{StaticResource White}"
                           FontFamily="Merriweather"/>
                </HorizontalStackLayout>
                
                <HorizontalStackLayout>
                    <Label Text="Nome do Desenolvedor:"
                           FontSize="19"
                           TextColor="{StaticResource Primary}"
                           FontFamily="Merriweather"/>

                    <Label Text="Guilherme Henrique;"
                           FontSize="18"
                           TextColor="{StaticResource White}"
                           FontFamily="Merriweather"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout>
                    <Label Text="Formação do Desenvolvedor:"
                           FontSize="19"
                           TextColor="{StaticResource Primary}"
                           FontFamily="Merriweather"/>

                    <Label Text="ETECAP"
                           FontSize="18"
                           TextColor="{StaticResource White}"
                           FontFamily="Merriweather"/>
                </HorizontalStackLayout>
                
            </VerticalStackLayout>
        </Frame>

    </VerticalStackLayout>
    
</ContentPage>